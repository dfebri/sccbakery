$(function () {
    $("#product-menu").click(function () {
        $(this).children('ul').stop().slideToggle();
        $(this).children('ul').toggleClass('active');
		$('.menu-close', $(this)).toggle();
		$('.menu-open', $(this)).toggle();
    });
});
