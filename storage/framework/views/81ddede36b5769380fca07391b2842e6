<div class="row <?php echo e($group); ?>">
	<div class="col-xs-<?php echo e($label_width); ?>">
		<?php echo Form::label($name, $label, $label_property); ?>

	</div>
	<div class="col-xs-<?php echo e($input_width); ?>">
		<?php foreach($option as $val => $text): ?>
			<?php if($inline): ?>
				<label class="checkbox-inline">
			<?php else: ?>
				<div class="checkbox">
					<label>
			<?php endif; ?>

			<?php echo Form::radio($name, $val, $val == Input::old($name, $value), $property); ?> <?php echo e($text); ?>


			<?php if($inline): ?>
				</label>
			<?php else: ?>
					</label>
				</div>
			<?php endif; ?>
		<?php endforeach; ?>
		<?php if($suffix): ?>
			<div class="form-suffix clearfix">
				<?php echo $suffix; ?>

			</div>
		<?php endif; ?>
	</div>
</div>